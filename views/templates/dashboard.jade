	.row(ng-controller="ModalCtrl")

		//- Budget & Profile? Column
		.col-md-4
			.budget-block
				h2.inverse-title BUDGET
				.divider
			.quote-block
				p.quote
					span.quotations " 
					| The only time you should ever look back is to see how far you've come.
					span.quotations.pull-right " 
				p.author.pull-right - Unknown Author
		//- Projects Column
		.col-md-4.gutters
			.row.form-group
				button.btn.btn-custom-project(type="button" ng-click="openProject()") add project

			.row.max-height
				accordion(close-others="oneAtATime" )
					accordion-group(ng-repeat="project in projects track by $index | orderBy:'-priority'" is-open="status.open") 
						.row
							.col-xs-6
								h2 {{project.budget | currency : symbol : fractionSize }}
								p.sm-label remaining budget
						.row
							.col-xs-4
								p {{project.budget | currency : symbol : fractionSize }}
								p.sm-label total budget
							.col-xs-4
								p {{project.budget | currency : symbol : fractionSize }}
								p.sm-label budget spent


						.row
							.col-xs-offset-1
								.col-xs-5
									p.sub-title TASKS
								.col-xs-5
									p.sub-title.pull-right COST
							.col-xs-10.col-xs-offset-1.divider

						.row(ng-repeat="task in project.tasks track by $index")
							.col-xs-6.col-xs-offset-1
								div.checkbox(ng-if="task")
									<label><input ng-model="project.task.taskValue[task]" ng-true-value="1" ng-false-value="-1" ng-click="progress(project.task.taskValue[task])" type="checkbox" > {{task}} </label>
									p {{project.task.taskValue[task]}}
								div.input-group(ng-if="!task")
									input.form-control(ng-model="task" placeholder="task")
									.input-group-addon.btn-success(ng-click="pushTask(project, task)") ok
									.input-group-addon.btn-danger(type="button" ng-click="project.tasks.splice($index)" aria-label="Remove") x
							.col-xs-4
								.form-group
									input.form-control(placeholder="$0.00")
						.row.ex-pad-sm
							.col-xs-10.col-xs-offset-1
								button.btn.add-btn-custom(type="button" ng-click="addProjectTask(project)") add another task

						.row.ex-pad-sm
							.col-xs-10.col-xs-offset-1
								ul.nav
									li
										button.btn.delete-link(type="button" ng-click="projects.splice($index, 1)" aria-label="Remove") Remove Project


								//- .col-xs-1
									//- button.btn.btn-danger(type="button" ng-click="newProject.task.splice($index, 1)" aria-label="Remove") x

						accordion-heading
							.row
								.col-xs-6
									h2.title {{project.name}}
								.col-xs-6
									i.pull-right.ex-pad.glyphicon(ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}")
							.row
								.col-xs-12
									progressbar(max="project.tasks.length" value="progress(project.task.taskValue[task])" class="bar-custom")
										span(style='color:white; white-space:nowrap;') {{project.tasks.completedTasks}}%




		//- Shopping Lists & Quote Column
		.col-md-4
			
			.row.form-group
				button.btn.btn-custom-list(type="button" ng-click="openList()") add shopping list

			.row
				accordion(close-others="oneAtATime" )
					accordion-group(ng-repeat="list in lists track by $index" is-open="status.open") 
						.row
							.col-xs-offset-1
								p.sub-title ITEMS
							.col-xs-10.col-xs-offset-1.divider
						.row(ng-repeat="item in list.items track by $index")
							.col-xs-10.col-xs-offset-1
								div(ng-if="item") - {{item}}
								div.input-group(ng-if="!item")
									input.form-control(ng-model="item" placeholder="item")
									.input-group-addon.btn-success(ng-click="pushItem(list, item)") ok
									.input-group-addon.btn-danger(type="button" ng-click="list.items.splice($index)" aria-label="Remove") x
						.row.ex-pad-sm
							.col-xs-10.col-xs-offset-1
								button.btn.add-btn-custom(type="button" ng-click="addListItem(list)") add another item
						.row.ex-pad-sm
							.col-xs-10.col-xs-offset-1
								ul.nav
									li
										button.btn.delete-link(type="button" ng-click="lists.splice($index, 1)" aria-label="Remove") Remove List


								//- .col-xs-1
									//- button.btn.btn-danger(type="button" ng-click="newProject.task.splice($index, 1)" aria-label="Remove") x
						accordion-heading
							.row
								.col-xs-6
									h3.title {{list.name}}
								.col-xs-6
									i.pull-right.glyphicon.ex-pad2(ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}")


